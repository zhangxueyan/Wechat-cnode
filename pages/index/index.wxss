/**index.wxss**/
page{
  width:100%;
  height:100%;
}
.container{
  font-size:28rpx;
}
.nav-bar{
  width:100%;
  background:#444;
  padding:0 0 20rpx 0; 
  position: fixed;
  left:0;
  top:0;
  z-index:100;
  display:flex;
}
.nav-item{
  width:20%;
  text-align:center;
  color:#fff;
  font-size:28rpx;
}
.nav-item.active{
  color:greenyellow;
}


.scroll-list{
  margin-top:60rpx;
}
.list-top{
  padding:30rpx 0;
  border-bottom: 1rpx solid #ebebeb;
  display:flex;
}
.list-item{
  border-bottom: 1rpx solid #80bd01;
  padding:0 30rpx;
}
.avatar{
  width:100rpx;
  height:100rpx;
  border-radius:50%;
  border:1rpx solid #ebebeb;
}
.list-cont{
 width: calc(100% - 100rpx);
 padding-left:20rpx;
}
.list-name-long{
  display:flex;
  justify-content:space-between;
}
.user-name{
  line-height: 44rpx;
}
.zhiding{
  font-size: 28rpx;
  color:red;
  border:1rpx solid red;
  padding: 0 5rpx;
  margin-right: 3rpx;
}
.list-title{
  line-height: 44rpx;
}
.list-bot{
  display:flex;
  justify-content:space-between;
  padding:20rpx 0;

}
.bot-item{
  display:flex;
}
.bot-item image{
  width:42rpx;
  height: 34rpx;
}
.bot-item text{
  margin-left:10rpx;
}
.bot-item2{
  margin-left:20rpx;
}
